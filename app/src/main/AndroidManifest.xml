<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.univefinal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Belasting" />
        <activity
            android:name=".WebViewController"
            android:label="@string/title_activity_web_view_controller"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tips"
            android:label="@string/title_activity_tips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SchadeService"
            android:label="@string/title_activity_schade_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HypotheekCheck"
            android:label="@string/title_activity_hypotheek_check"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ZorgCheck"
            android:label="@string/title_activity_zorg_check"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NetworkError"
            android:label="@string/title_activity_network_error"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LicenseError"
            android:label="@string/title_activity_license_error"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VehicleInformation"
            android:label="@string/title_activity_vehicle_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LicensePlateManual"
            android:label="@string/title_vehicle_info"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".LicensePlateScan"
            android:label="@string/title_activity_license_plate_scan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VehicleMenu"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>