<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VehicleInformation"
    tools:showIn="@layout/activity_vehicle_information">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="153dp"
            android:layout_marginRight="153dp"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="@string/title_activity_vehicle_information"
            android:textColor="#505050"
            android:textSize="@dimen/titleTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="234dp"
            android:layout_height="51dp"
            android:layout_marginStart="77dp"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:src="@drawable/license_plate_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/license_plate_input2"
            android:layout_width="122dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:maxLength="8"
            android:textColor="#505050"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.687"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/generalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/title_cardview_general"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGeneral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonSideMargin"
            android:layout_marginLeft="@dimen/buttonSideMargin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/buttonSideMargin"
            android:layout_marginRight="@dimen/buttonSideMargin"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generalTitle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/general_info"
                    style="@style/vehicleInfoData"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/general_info_labels"
                    android:layout_toRightOf="@+id/general_info_labels"
                    android:textAllCaps="false"
                    android:textColor="#505050"
                    android:textSize="@dimen/mainTextSize"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/general_info_labels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/general_info_labels"
                    style="@style/vehicleInfoLabels"
                />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/vehicleInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/title_cardview_vehicle"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewGeneral" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewVehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonSideMargin"
            android:layout_marginLeft="@dimen/buttonSideMargin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/buttonSideMargin"
            android:layout_marginRight="@dimen/buttonSideMargin"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vehicleInfoTitle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vehicle_info"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/vehicle_info_labels"
                    android:layout_toRightOf="@+id/vehicle_info_labels"
                    android:textAllCaps="false"
                    android:textColor="#505050"
                    android:textSize="@dimen/mainTextSize"
                    android:textStyle="bold"
                    style="@style/vehicleInfoData"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/vehicle_info_labels"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/vehicle_info_labels"
                    style="@style/vehicleInfoLabels"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/loaderOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible">

                    <ProgressBar
                        android:id="@+id/pBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:theme="@style/GreenLoader" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/vehicleCostsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/title_cardview_costs"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewVehicle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCosts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonSideMargin"
            android:layout_marginLeft="@dimen/buttonSideMargin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/buttonSideMargin"
            android:layout_marginRight="@dimen/buttonSideMargin"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vehicleCostsTitle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vehicle_costs"
                    style="@style/vehicleInfoData"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toEndOf="@+id/vehicle_costs_labels"
                    android:layout_toRightOf="@+id/vehicle_costs_labels"
                    android:textAllCaps="false"
                    android:textColor="#505050"
                    android:textSize="@dimen/mainTextSize"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/vehicle_costs_labels"
                    style="@style/vehicleInfoLabels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/vehicle_costs_labels"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/costsheading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_costs_labels"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Naar schatting betaalt u voor deze auto" />

                <TextView
                    android:id="@+id/total_costs_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/costsheading1"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/bree_serif"
                    android:gravity="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/costsheading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_costs_label"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Op basis van 10.000km per jaar\nAlle bedragen zijn indicatief."
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonCalcPremie"
            style="@style/NavForwardButtonPurple"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Bereken uw premie"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCosts" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
